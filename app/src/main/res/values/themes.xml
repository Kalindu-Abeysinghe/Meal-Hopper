<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/uber_move_font</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/customRed</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LogInTheme">
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CartQuantityTheme">
        <item name="android:layout_marginHorizontal">3dp</item>
    </style>

    <style name="UserProfileGridSpace">
        <item name="android:layout_marginVertical">40dp</item>
        <item name="android:layout_marginHorizontal">30dp</item>

    </style>

    <style name="UserProfileLabelTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OrderInfoSpaceTheme">
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>

    <style name="OrderItemDetailSpacing">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

</resources>