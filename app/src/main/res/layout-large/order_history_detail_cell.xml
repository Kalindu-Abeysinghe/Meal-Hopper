<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            android:id="@+id/food_name_orderDetail"
            style="@style/OrderItemDetailSpacing"
            android:text="Food Name "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/count_order_items"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/OrderItemDetailSpacing"
            android:textAlignment="viewEnd"
            android:text="x 1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/items_price"
            style="@style/OrderItemDetailSpacing"
            android:text="Item Price: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            style="@style/OrderItemDetailSpacing"
            android:id="@+id/restaurant_name_order"
            android:layout_rowWeight="1"
            android:textStyle="italic"
            android:text="from restaurant name: "/>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNull2"
        android:textSize="3sp"
        android:visibility="invisible"
        />
</FrameLayout>